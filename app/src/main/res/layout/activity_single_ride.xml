<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.labs.okey.commonride.SingleRideActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Driver"/>
    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/imgageViewDriver"
            android:layout_width="72dp"
            android:layout_height="72dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp">

            <TextView
                android:id="@+id/txtDriverName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Driver Name"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="emailDriver"
                    android:src="@android:drawable/ic_dialog_email" />
                <TextView
                    android:id="@+id/txtDriverEMail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Driver EMail"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:clickable="true"
                    android:onClick="emailDriver"
                    android:layout_gravity="left" />
             </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@android:drawable/stat_sys_phone_call"
                    android:onClick="showRideMap" />

                <TextView
                    android:id="@+id/txtDriverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Driver Phone"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:clickable="true"
                    android:onClick="callDriver"
                    android:layout_gravity="left" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_map"
            android:clickable="true"
            android:onClick="showRideMap" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Ride"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="From: "/>

        <TextView android:id="@+id/ride_from"
            android:text="@string/ride_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="To: "/>

        <TextView android:id="@+id/ride_to"
            android:text="@string/ride_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="When: "/>
        <TextView android:id="@+id/ride_when"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Passengers"
        android:layout_marginTop="10dp" />
    <View style="@style/Divider"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewPassengers" />

</LinearLayout>
