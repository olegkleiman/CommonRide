<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.labs.okey.commonride.SingleRideActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Driver"/>
    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgageViewDriver"
            android:layout_width="64dp"
            android:layout_height="64dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDriverName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Driver Name"/>
            <TextView
                android:id="@+id/txtDriverEMail"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Driver EMail"/>
            <TextView
                android:id="@+id/txtDriverPhone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Driver Phone"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Ride"/>
    <View style="@style/Divider"/>

    <TextView android:id="@+id/ride_from"
        android:text="@string/ride_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="left|top"/>

    <TextView android:id="@+id/ride_to"
        android:text="@string/ride_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="left|top"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Passengers"/>
    <View style="@style/Divider"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewPassengers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/btnJoinRide"
        android:onClick="btnJoinRideClick" />

</LinearLayout>
